<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:padding="16dp"
    android:paddingTop="32dp"
    android:background="@color/cor_background_login">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo_bg_black"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="75dp" />


    <EditText
        android:id="@+id/edtEmailUsuario"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="20px"
        android:hint="UsuÃ¡rio"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:theme="@style/AppTheme.EditTextStyle"
        android:textColor="@color/colorPrimaryDark"/>


    <EditText
        android:id="@+id/edtSenhaUsuario"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:background="@color/colorAccent"
        android:hint="Senha"
        android:paddingLeft="20px"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:theme="@style/AppTheme.EditTextStyle"
        android:textColor="@color/colorPrimaryDark"/>


    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="ENTRAR"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnPrimeiroAcesso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="PRIMEIRO ACESSO?"
        android:textColor="@color/colorPrimaryDark" />





</LinearLayout>